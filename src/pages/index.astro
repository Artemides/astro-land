<script>
	const $boxers=document.getElementById('boxers');
	const $boxersImages=$boxers.querySelectorAll('img');

	$boxersImages.forEach(($boxer)=>{
		$boxer.addEventListener('mouseleave',()=>{
			$boxersImages.forEach(($thisBoxer)=>{
				$thisBoxer.setAttribute('style','transition: all .3s ease-in-out')
			})
		})
		$boxer.addEventListener("mouseenter",()=>{
			const sectionImages=$boxer.parentNode.children;
			const idx=Array.from(sectionImages).indexOf($boxer)

			const [leftBoxer,rightBoxer]=[
				$boxersImages[idx],
				$boxersImages[idx+$boxersImages.length/2]
			]

			$boxersImages.forEach(($thisBoxer)=>{
				$thisBoxer.setAttribute('style','filter:blur(2px) grayscale(.8); transition: all .3s ease-in-out')
			})
			leftBoxer.setAttribute('style','scale: 1.05 ; contrast:1.1; transition:all .3s ease-in-out');
			rightBoxer.setAttribute('style','scale: 1.05 ; contrast:1.1; transition:all .3s ease-in-out')
		})
	})


</script>
